<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <!-- History Button (Top Right) -->
    <ImageButton
        android:id="@+id/btnHistory"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_history"
        android:tint="@color/white"
        android:contentDescription="@string/meter_history_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Main Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical"
        android:layout_marginTop="65dp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="20dp">

        <!-- Title -->
        <TextView
            style="@style/titresClair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tab_meter"
            android:textColor="@color/white"
            android:layout_marginBottom="20dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:background="@drawable/gradient_background"
            app:cardCornerRadius="40dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/meter_bg"
                android:orientation="vertical">

                <TextView
                    style="@style/titresClair2"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grisClair"
                    android:text="@string/meter_total_label" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        style="@style/textStyleChrono"
                        android:gravity="end"
                        android:paddingEnd="50dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="888.88"
                        android:textColor="@color/gris"
                        android:textSize="100dp"/>
                    <TextView
                        android:id="@+id/tvTotalAPayer"
                        style="@style/textStyleChrono"
                        android:gravity="end"
                        android:paddingEnd="50dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/meter_default_distance"
                        android:textSize="100dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    style="@style/textStyle"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dhs" />

                <!-- Additional Information -->
                <LinearLayout
                    android:id="@+id/layout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="20dp">

                    <!-- Time Block -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="10dp"
                        android:gravity="center"
                        android:layout_weight="1">
                        <TextView
                            style="@style/textStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/meter_time_label"/>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                style="@style/textStyleChrono"
                                android:gravity="end"
                                android:paddingEnd="30dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="888:88"
                                android:textColor="@color/gris"/>
                            <TextView
                                android:id="@+id/tvTempsEcoule"
                                style="@style/textStyleChrono"
                                android:gravity="end"
                                android:paddingEnd="30dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/meter_default_time"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <TextView
                            style="@style/textStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="min" />
                    </LinearLayout>

                    <!-- Distance Block -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="10dp"
                        android:gravity="center"
                        android:layout_weight="1">
                        <TextView
                            style="@style/textStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/meter_distance_label"/>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                style="@style/textStyleChrono"
                                android:gravity="end"
                                android:paddingEnd="30dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="888.88"
                                android:textColor="@color/gris"/>
                            <TextView
                                android:id="@+id/tvDistance"
                                style="@style/textStyleChrono"
                                android:gravity="end"
                                android:paddingEnd="30dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/meter_default_distance"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <TextView
                            style="@style/textStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="km"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Action Buttons Container -->
        <LinearLayout
            android:id="@+id/actionButtonsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Start/Stop Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDemarrerTaxi"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="@string/meter_button_start"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:icon="@android:drawable/ic_media_play"
                app:iconTint="@color/black"
                app:iconGravity="textStart"
                app:cornerRadius="32dp"
                app:backgroundTint="@color/jauneTaxi" />

            <!-- Reset Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnReset"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="@string/meter_button_reset"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                app:icon="@android:drawable/ic_menu_revert"
                app:iconTint="@color/white"
                app:iconGravity="textStart"
                app:cornerRadius="32dp"
                app:strokeColor="#4A90E2"
                app:strokeWidth="2dp"
                app:backgroundTint="#00000000" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>